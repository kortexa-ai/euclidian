{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Euclidian",
  "version": "0.1.0",
  "identifier": "ai.kortexa.euclidian",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Euclidian",
        "width": 800,
        "height": 600
      }
    ],
    "trayIcon": {
      "iconPath": "icon.png",
      "tooltip": "My Awesome App",
      "menu": {
        "items": [
          {
            "id": "show",
            "label": "Show App"
          },
        {
          "id": "quit",
          "label": "Quit"
        }
      ]
    }
  },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
